@model List<Yazi>
@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.header = "home";
}

<div class="container py-5">
    <h2 class="mb-4">Son Eklenen Yazılar</h2>
    <div class="row">
        @foreach (var item in Model.Take(3))
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <img class="card-img-top" src="@item.ResimUrl" alt="@item.Baslik">
                    <div class="card-body">
                        <h5 class="card-title">@item.Baslik</h5>
                        <p class="card-text">
                            <small class="text-muted">
                                <i class="fa fa-calendar-alt"></i> @item.Tarih.ToShortDateString() |
                                <i class="fa fa-folder"></i> @item.Kategori?.Ad |
                                <i class="fa fa-user"></i> @item.OlusturanKisi
                            </small>
                        </p>
                        <p>@item.Icerik.Substring(0, Math.Min(100, item.Icerik.Length))...</p>
                        <a href="/Yazi/Detay/@item.Id" class="btn btn-sm btn-outline-primary">Devamını Oku</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <hr />
</div>
